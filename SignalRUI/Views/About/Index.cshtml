@model List<ResultAboutDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkimda Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkimda Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkimda ile ilgili islemleri asagidan gerceklestirebilirsiniz.1 Adet Hakkimda alani olmali.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Baslik</th>
									<th scope="col">Aciklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Guncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td> @count </td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td> <a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">SIL</a> </td>
										<td> <a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-success">GUNCELLE</a> </td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/About/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkimda Yazisi Girisi</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>

