@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkimda Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Hakkimda Girisi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="aboutTitle">Hakkimda Basligi Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="aboutTitle" placeholder="Baslik">
							</div>
							<div class="form-group">
								<label for="aboutDescription">Hakkimda Aciklama Giriniz</label>
								@* <input type="text" class="form-control" asp-for="Description" id="aboutDescription" placeholder="Aciklama"> *@
								<textarea rows="5" class="form-control" asp-for="Description"></textarea>
							</div>
							<div class="form-group">
								<label for="aboutImage">Hakkimda Resmi Giriniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="aboutImage" placeholder="Resim URl">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success-primary">Kategoriyi Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

