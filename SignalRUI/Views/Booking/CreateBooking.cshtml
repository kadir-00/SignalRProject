@model CreateBookingDto
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Kategori Girisi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Name">Ad Soyad</label>
								<input type="text" class="form-control" asp-for="Name" id="Name" placeholder="Isim">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Telefon</label>
								<input type="number" class="form-control" asp-for="Phone" id="Phone" placeholder="Telefon No ">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Mail</label>
								<input type="email" class="form-control" asp-for="Mail" id="Mail" placeholder="Mail ">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="PersonCount">Kisi Sayisi</label>
								<input type="text" class="form-control" asp-for="PersonCount" id="PersonCount" placeholder="Kisi Sayisi">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Date">Tarih</label>
								<input type="datetime-local" class="form-control" asp-for="Date" id="Date" placeholder="Tarih">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success-primary">Rezervasyon Olustur</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

