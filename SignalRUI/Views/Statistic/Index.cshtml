			$(document).ready(() => {

				var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7190/SignalRHub").build();
				$("#connstatus").text(connection.state);

				connection.start().then(() => {
					$("#connstatus").text(connection.state);
					setInterval(() => {
						connection.invoke("SendStatistic");
					}, 1000);

				}).catch((err) => { console.log(err) });

