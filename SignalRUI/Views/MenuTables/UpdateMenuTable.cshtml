@model UpdateMenuTableDto
@{
    ViewData["Title"] = "UpdateMenuTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Masa Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Masa Girisi</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="MenuTableId" />
							<div class="form-group">
								<label for="name">Masa Adini Giriniz</label>
								<input type="text" class="form-control" asp-for="Name" id="name" placeholder="Masa Ismi">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success-primary">Masayi Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

