@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						
						<div class="card-header">
							<div class="card-title">Yeni Bildirim Girisi</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="NotificationId" />
							<div class="form-group">
								<label for="type">Bildirim Turu Giriniz</label>
								<input type="text" class="form-control" asp-for="Type" id="type" placeholder="Tur">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Description">Bildirim Aciklamasi Giriniz</label>
								<input type="text" class="form-control" asp-for="Description" id="Description" placeholder="Aciklama">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Icon">Bildirim Iconu Giriniz</label>
								<input type="text" class="form-control" asp-for="Icon" id="Icon" placeholder="Ikon">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success-primary">Bildirimi Guncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

