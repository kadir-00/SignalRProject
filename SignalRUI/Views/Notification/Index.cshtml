@model List<ResultNotificationDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Bildirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Bildirimler ile ilgili islemleri asagidan gerceklestirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Aciklama</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Guncelle</th>
									<th scope="col">Okundu Olarak Isaretle</th>
									<th scope="col">Okunmadi Olarak Isaretle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th> @count </th>
										<td>@item.Description</td>
										<td>@item.Date</td>
										<td>@item.Status</td>
										<td> <a href="/Notification/DeleteNotification/@item.NotificationId" class="btn btn-outline-danger">SIL</a> </td>
										<td> <a href="/Notification/UpdateNotification/@item.NotificationId" class="btn btn-outline-success">GUNCELLE</a> </td>
										<td> <a href="/Notification/NotificationStatusChangeToFalse/@item.NotificationId" class="btn btn-outline-warning">Okunmadi</a> </td>
										<td> <a href="/Notification/NotificationStatusChangeToTrue/@item.NotificationId" class="btn btn-outline-secondary">Okundu</a> </td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Notification/CreateNotification/" class="btn btn-outline-primary">Yeni Bildirim Girisi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

