@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Alt Iletisim Bilgi Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Alt Iletisim Bilgi Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Alt Iletisim Bilgileri ile ilgili islemleri asagidan gerceklestirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Konum</th>
									<th scope="col">Telefon</th>
									<th scope="col">Mail</th>
									<th scope="col">Aciklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Guncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td> @item.ContactId </td>
										<td>@item.Location</td>
										<td>@item.Phone</td>
										<td>@item.Mail</td>
										<td>@item.FooterDescription</td>
										<td> <a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">SIL</a> </td>
										<td> <a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-success">GUNCELLE</a> </td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Contact/CreateContact/" class="btn btn-outline-primary">Yeni Alt Iletisim Bilgisi Girisi</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>

