@model List<ResultDiscountDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Indirim Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Indirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Indirim ile ilgili islemleri asagidan gerceklestirebilirsiniz.Max 2adet indirimli irin seciniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Urun</th>
									<th scope="col">Indirim Orani</th>
									<th scope="col">Indirim Durumu</th>
									<th scope="col">Sil</th>
									<th scope="col">Guncelle</th>
									<th scope="col">Aktif Yap</th>
									<th scope="col">Pasif Yap</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th> @count </th>
										<td>@item.Title</td>
										<td>@item.Amount</td>
										<td>@item.Status</td>
										<td> <a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-outline-danger">SIL</a> </td>
										<td> <a href="/Discount/UpdateDiscount/@item.DiscountId" class="btn btn-outline-success">GUNCELLE</a> </td>
										<td> <a href="/Discount/ChangeStatusToTrue/@item.DiscountId" class="btn btn-outline-warning">Aktif Yap</a> </td>
										<td> <a href="/Discount/ChangeStatusToFalse/@item.DiscountId" class="btn btn-outline-dark">Pasif Yap</a> </td>

									</tr>
								}

							</tbody>
						</table>
						<a href="/Discount/CreateDiscount/" class="btn btn-outline-primary">Yeni Indirim Girisi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

