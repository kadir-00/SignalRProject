@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@* Urun Islemleri *@

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Urun Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Urun Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kategori ile ilgili islemleri asagidan gerceklestirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Urun Adi</th>
									<th scope="col">Fiyat</th>
									<th scope="col">Kategori</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Guncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td> @item.ProductID </td>
										<td>@item.ProductName</td>
										<td>@item.Price</td>
										<td>@item.CategoryName</td>
										<td>@item.ProductStatus</td>
										<td> <a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">SIL</a> </td>
										<td> <a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success">GUNCELLE</a> </td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Product/CreateProduct/" class="btn btn-outline-primary">Yeni Kategori Girisi</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>



