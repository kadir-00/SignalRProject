@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Urun Islemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Urun Guncelleme </div>
						</div>
						<input type="hidden" asp-for="ProductID" />
						<div class="card-body">
							<div class="form-group">
								<label for="productname">Urun Adini Giriniz</label>
								<input type="text" class="form-control" asp-for="ProductName" id="productname" placeholder="Urun">
							</div>
							<div class="form-group">
								<label for="price">Urun Fiyatini Giriniz</label>
								<input type="text" class="form-control" asp-for="Price" id="price" placeholder="Fiyat">
							</div>
							<div class="form-group">
								<label for="ImageUrl">Urun Gorselini Giriniz</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl" placeholder="ResimUrl">
							</div>
							<div class="form-group">
								<label for="category">Urun Kategorisini Seciniz</label>
								@Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
							</div>
							<div class="form-group">
								<label for="description">Urun Aciklamasini Giriniz</label>
								<input type="text" class="form-control" asp-for="Description" id="description" placeholder="Aciklama">
							</div>

						</div>
						<div class="card-action">
							<button class="btn btn-success-primary">Urun Guncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

